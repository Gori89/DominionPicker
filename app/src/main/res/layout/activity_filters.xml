<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="8dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingBottom="8dp" >

    <ca.marklauman.tools.preferences.MultiSelectPreference
        android:layout_width="match_parent"
        android:layout_height="?android:attr/listPreferredItemHeight"
        android:background="?attr/selectableItemBackground"
        app:key="filt_set"
        app:entries="@array/filter_set"
        app:entryValues="@array/filter_set_ids"
        app:name="@string/filter_set"
        app:image="@drawable/ic_set_base"
        app:summary="@string/filter_all"
        app:entryIcons="@array/card_set_icons"
        app:inverted="true" />

    <View android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@android:drawable/divider_horizontal_bright" />

    <ca.marklauman.tools.preferences.MultiSelectPreference
        android:layout_width="match_parent"
        android:layout_height="?android:attr/listPreferredItemHeight"
        android:background="?attr/selectableItemBackground"
        app:key="filt_cost"
        app:name="@string/filter_cost"
        app:image="@drawable/ic_coin_lg"
        app:entries="@array/filt_cost"
        app:summary="@string/filter_all"
        app:entryIcons="@array/filter_cost_icons"
        app:inverted="true" />

    <View android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@android:drawable/divider_horizontal_bright" />

    <ca.marklauman.tools.preferences.CheckBoxPreference
        android:layout_width="match_parent"
        android:layout_height="?android:attr/listPreferredItemHeight"
        android:background="?attr/selectableItemBackground"
        app:key="filt_curse"
        app:name="@string/filter_curse"
        app:summary="@string/filter_curse_desc"
        app:image="@drawable/ic_curse" />

    <View android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@android:drawable/divider_horizontal_bright" />

</LinearLayout>