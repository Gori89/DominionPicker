<resources>
    <!-- Theme used by the app -->
    <style name="AppTheme" parent="AppThemeOld" />

    <!-- Fix for button backgrounds to display correctly with AppCompat 22 -->
    <style name="AppThemeOld" parent="AppThemeNew" >
        <item name="android:buttonStyle">@android:style/Widget.Button</item>
    </style>

    <!-- Basic theme for the app -->
    <style name="AppThemeNew" parent="Theme.AppCompat.Light" >
        <item name="colorPrimary">@color/actionbar_back</item>
        <item name="colorPrimaryDark">@android:color/black</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:scrollbarSize">8dp</item>
    </style>
</resources>
